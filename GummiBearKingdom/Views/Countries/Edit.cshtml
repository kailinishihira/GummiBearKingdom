@model GummiBearKingdom.Models.Country

@{
    ViewData["Title"] = "Edit Country";
}

<div class="banner">
    <h1 class="title">Edit Country of Origin</h1>
</div>

@using (Html.BeginForm())
{
    <div class="card edit-card">
        <div class="card-block">
            <div class="form-group row">
                <label class="col-md-2">Country of Origin:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Name, new {@class="form-control"})
                </div>
            </div>
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

<p class="back">@Html.ActionLink("Back to Details", "Details", new{ countryId = Model.CountryId })</p>