@model GummiBearKingdom.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="edit-banner">
    <h1 class="edit-title">EDIT @Html.DisplayFor(model => model.Name)</h1>
</div> 

<p class="back">@Html.ActionLink("Back", "Details", new{productId = Model.ProductId})</p>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ProductId)

    <div class="card edit-card">
        <div class="card-block">
		
            <div class="form-group row">
                <label class="col-md-3">@Html.DisplayNameFor(model => model.Name):</label>
			    <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Name, new{@class="form-control"})
			    </div>
		    </div>
		
		    <div class="form-group row">
                <label class="col-md-3">@Html.DisplayNameFor(model => model.Description):</label>
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.Description, new{rows="10", cols="95"})
                </div>
            </div>
		
		    <div class="form-group row">
                <label class="col-md-3">@Html.DisplayNameFor(model => model.Cost): $</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Cost, new{@class="form-control"})
                </div>
            </div>
		
		    <div class="form-group row">
                <label class="col-md-3">Country of Origin:</label>
                <div class="col-md-9">
                    @Html.DropDownList("CountryId")
                </div>
            </div>
		
		    <input type="submit" value="Update" class="btn btn-default" /> 
	    </div>
    </div> 
}